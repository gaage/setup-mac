
#Python homebrew
alias python2=/usr/local/opt/python@2/bin/python2

# Open macapps from commandline using 'open -a'
alias finder='open -a finder'
alias fluor='open -a Fluor'
alias preview='open -a Preview $@'

# cd aliases
alias ls="gls --color=auto $@"
alias ..="cd .."
alias ...="cd ../.."
alias sm='cd $HOME/.setup-mac'

# Connect to your favourite server
# Don't use a password. Generate a passphrase-less SSH key and push it
# to your server:
# ssh-keygen -t rsa -b 2048     (leave password empty when prompted)
# Copy your keys to the target server:
# ssh-copy-id id@server            (requires server password)
# alias myserver="ssh id@server"
alias dreamhost="ssh geinov@noven.no"
alias ottohost="ssh otto.local"
alias minihost="ssh mini.local"


# Additional user aliases (with confidential contens?)
# Like:
alias matlab='/Applications/MATLAB_R2021b.app/bin/matlab -nodesktop -nosplash'

# alias dreamhost='ssh user@domain'
[ -e $HOME/.aliases ] && source $HOME/.aliases
